<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
<%= render 'users/error_messages' %>
  <p><div class="field">
    <%= f.text_field :name %>
    <%= f.label :name %><br/>
    
    <%= f.text_field :email %>
    <%= f.label :email %><br />
    
    <%= f.password_field :password %>
    <%= f.label :password %><br />
  
    
    <%= f.password_field :password_confirmation %>
    <%= f.label :password_confirmation, "Confirmation" %><br />
    
    <%= f.submit "Sign up" %>
  </div></p>
<% end %>