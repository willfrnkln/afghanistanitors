<h1>File Upload</h1>
<% form_for( @image, :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages -%>
  <p>
    <%= f.label :name, 'Title' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :upload, 'File' -%>
    <%= f.file_field :upload -%>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit( 'Upload' ) %></p>
<% end %>